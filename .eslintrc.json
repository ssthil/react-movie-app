{
  "parser": "babel-eslint",
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "plugins": ["react"],
  "rules": {
    "no-undef": [1],
    "no-func-assign": "error",
    "no-useless-return": "error",
    "no-console": 0,
    "quotes": [
      "error",
      "single",
      {
        "avoidEscape": true
      }
    ],
    "semi": ["error", "always"],
    "comma-dangle": ["warn", "never"],
    "no-useless-constructor": ["error"]
  },
  "globals": {
    "localStorage": true,
    "document": true,
    "fetch": false
  }
}
